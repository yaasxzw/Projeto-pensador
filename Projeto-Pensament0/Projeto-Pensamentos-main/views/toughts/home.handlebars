<section class="home-header">
  {{#if search }}
  <h1>Você está buscando por: <span>{{search}}</span></h1>
  {{#if toughtQty}}
  <p>Foram encontrados {{toughtQty}} pensamentos</p>
  {{else}}
  <p>Nenhum pensamento foi encontrado com o termo "{{search}}"</p>
  {{/if}}
  {{else}}
  <h1>Conheça alguns dos nossos pensamentos</h1>
  {{/if}}
  <h1>Todos os pensamentos</h1>
  <form action="/" method="get">
    <input type="text" name="search" placeholder="Está buscando algo" />
    <input type="submit" class="button" value="Buscar" />
  </form>
  <div class="order-container">
    <span>Ordenar por:</span>
    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="new" />
      <button type="submit">
        <i class="bi bi-arrow-up"></i>
        Mais novos
      </button>
    </form>

    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="old" />
      <button type="submit">
        <i class="bi bi-arrow-down"></i>
        Mais velhos
      </button>
    </form>
  </div>
</section>

<section class="toghts-container">
  {{#each toughts}}
    <figure>
      {{! para o navegador entender que é uma citação }}
      <blockquote>
       "{{this.title}}"
      </blockquote>
      <figcaption>
        Por :
        <span>{{this.User.email}}</span>
      </figcaption>
    </figure>
  {{/each}}
</section>